{
  "name": "root",
  "private": true,
  "scripts": {
    "commit": "./node_modules/cz-customizable/standalone.js"
  },
  "devDependencies": {
    "commitizen": "^4.1.2",
    "cz-customizable": "^6.2.1",
    "husky": "^4.2.5",
    "lerna": "^3.22.1"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  }
}
